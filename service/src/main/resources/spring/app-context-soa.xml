<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	   xmlns:context="http://www.springframework.org/schema/context"
	   xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd">

    <context:component-scan base-package="com.raydar.service" />

    <!--For context managing on audit-->
    <context:component-scan base-package="com.raydar.context"/>

    <!--for queue beans-->
    <context:component-scan base-package="com.raydar.queue"/>

    <!--Email Sender-->
    <bean id="emailSender" class="com.raydar.mail.EmailSender" />

</beans>
